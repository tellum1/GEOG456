        var map = L.map('mapi').setView([-0.1971, -78.4361], 13);
        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
}).addTo(map);
    var daMarker = L.marker([-0.1971, -78.4361]).addTo(map);
    daMarker.bindPopup("<b>Universidad San Francisco de Quito</b><br>USFQ is Ecuador's leading liberal-arts university.It was founded in 1988. I studied here for the Fall 2023 semester!").openPopup();
